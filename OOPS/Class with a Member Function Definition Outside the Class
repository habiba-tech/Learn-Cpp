using namespace std;

class Student {
public:
    string name;
    int age;

    void input();      // function declaration
    void display();
};

void Student::input() {   // function defined outside
    cout << "Enter name: ";
    cin >> name;
    cout << "Enter age: ";
    cin >> age;
}

void Student::display() {
    cout << "Name: " << name << endl;
    cout << "Age: " << age << endl;
}

int main() {
    Student s1;
    s1.input();
    s1.display();
    return 0;
}

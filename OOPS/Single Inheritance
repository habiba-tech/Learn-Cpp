#include <iostream>
using namespace std;

// Base class
class Person {
public:
    string name;
    void getName() {
        cout << "Enter name: ";
        cin >> name;
    }
};

// Derived class
class Student : public Person {
public:
    int age;
    void getAge() {
        cout << "Enter age: ";
        cin >> age;
    }

    void display() {
        cout << "Name: " << name << ", Age: " << age << endl;
    }
};

int main() {
    Student s1;
    s1.getName();
    s1.getAge();
    s1.display();
    return 0;
}
